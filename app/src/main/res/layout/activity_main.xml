<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_blue_light">

    <TextView
            android:layout_width="290dp"
            android:layout_height="84dp"
            android:text="@string/greeting_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.38"
            android:textColor="@android:color/black" android:textSize="30sp"
            android:gravity="center" android:id="@+id/textGreeting" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textRequest" android:background="@android:color/holo_blue_dark"
    />
    <TextView
            android:text="@string/request_text"
            android:layout_width="204dp"
            android:layout_height="40dp"
            android:id="@+id/textRequest"
            android:textColor="@android:color/background_dark" android:textSize="24sp" android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/start_button"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textStyle="normal" android:typeface="normal"
            android:background="@android:color/holo_blue_dark"
    />
    <Button
            android:text="@string/start_text"
            android:layout_width="167dp"
            android:layout_height="57dp"
            android:id="@+id/start_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            tools:ignore="MissingConstraints" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.829" app:layout_constraintHorizontal_bias="0.502"/>

</android.support.constraint.ConstraintLayout>